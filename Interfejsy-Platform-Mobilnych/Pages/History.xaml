<Page
    x:Class="Interfejsy_Platform_Mobilnych.Pages.History"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:Interfejsy_Platform_Mobilnych.Models"
    xmlns:syncfusion="using:Syncfusion.UI.Xaml.Charts"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <ScrollViewer>
            <StackPanel Margin="5">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="Waluta: " />
                    <TextBlock Text="{x:Bind ViewModel.SelectedCurrency}" />
                </StackPanel>
                
                <TextBlock HorizontalAlignment="Center">Zakres dat:</TextBlock>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                    <CalendarDatePicker CalendarViewDayItemChanging="CalendarDatePicker_OnCalendarViewDayItemChanging"
                                        PlaceholderText="Start date" Name="StartDate"
                                        MinDate="{x:Bind ViewModel.MinDate}" MaxDate="{x:Bind ViewModel.MaxDate}"
                                        HorizontalAlignment="Center" VerticalAlignment="Center" DateChanged="Date_DateChanged"/>
                    <CalendarDatePicker CalendarViewDayItemChanging="CalendarDatePicker_OnCalendarViewDayItemChanging"
                                        PlaceholderText="End date" Name="EndDate" MinDate="{x:Bind ViewModel.MinDate}"
                                        MaxDate="{x:Bind ViewModel.MaxDate}" HorizontalAlignment="Center" DateChanged="Date_DateChanged"/>
                    <Button Name="GenerateButton" IsEnabled="False" Click="GenerateButton_Click" Content="Genetuj wykres" HorizontalAlignment="Center"
                        IsTapEnabled="False" />
                </StackPanel>

                <TextBlock Name="InfoTextBlock" Visibility="Collapsed" Text="*Data początkowa musi być wcześniejsza od daty końcowej."
                           HorizontalAlignment="Center" FontStyle="Italic" />
                
                
                <TextBlock Text="Wykres" />

                <syncfusion:SfChart Name="Chart">
                    <syncfusion:LineSeries
                    ItemsSource="{x:Bind ViewModel.Values}"
                    XBindingPath="Demand"
                    YBindingPath="Year2010">

                    </syncfusion:LineSeries>
                    
                    <syncfusion:SfChart.PrimaryAxis>
                        <syncfusion:CategoryAxis   Header="Czas"/>
                    </syncfusion:SfChart.PrimaryAxis>
                    
                    <syncfusion:SfChart.SecondaryAxis>

                        <syncfusion:NumericalAxis 
                           
                            RangePadding="Round"   
                            Header="Kurss"/>

                    </syncfusion:SfChart.SecondaryAxis>
                </syncfusion:SfChart>

                <TextBlock>Postęp wczytania nowych danych</TextBlock>
                <ProgressBar />

                <TextBlock>Zapisanych lokalnie</TextBlock>
                <ProgressBar />

                <ProgressRing IsActive="True" />

            </StackPanel>
        </ScrollViewer>
        <CommandBar VerticalAlignment="Bottom">
            <AppBarButton Icon="Save" Label="Zapisz jako obraz" />
        </CommandBar>

    </Grid>
</Page>